<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.skyetracker.battery">
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <application
        android:name="ca.skyetracker.battery.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/battery"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/battery"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo">
        <activity android:name="ca.skyetracker.battery.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="ca.skyetracker.battery.cell" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name="ca.skyetracker.battery.BlueTooth"
            android:exported="false">
        </service>
    </application>

</manifest>